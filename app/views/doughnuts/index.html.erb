<h1><span class="highlight">Today's Magical Doughnuts</span></h1>
<div class="row">
<% @doughnuts.each do |doughnut| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= doughnut.image %>">
      <div class="caption">
        <h3><%= doughnut.name %></h3>
        <h3>Cost: $<%= doughnut.cost %></h3>
        <%= link_to "View More", doughnut, class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>


<%= link_to 'New Doughnut', new_doughnut_path, class: "btn btn-primary" %>
